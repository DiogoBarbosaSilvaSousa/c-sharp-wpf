<Window x:Class="WpChangeNotification.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpChangeNotification"
        mc:Ignorable="d"
       Title="ChangeNotification" Height="135" Width="300">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Right" Margin="10,0,0,0">
            <Button Name="btnAddUser" Click="btnAddUser_Click">Adicionar usuário</Button>
            <Button Name="btnChangeUser" Click="btnChangeUser_Click" Margin="0,5">Alterar usuário</Button>
            <Button Name="btnDeleteUser" Click="btnDeleteUser_Click">Deletar usuário</Button>
        </StackPanel>
        <ListBox Name="lbUsers" DisplayMemberPath="Name"></ListBox>
    </DockPanel>
</Window>

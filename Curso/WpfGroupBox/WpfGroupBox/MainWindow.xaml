<Window x:Class="WpfGroupBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfGroupBox"
        mc:Ignorable="d"
       Title="GroupBox" Height="250" Width="300">
    <Grid>
        <GroupBox Margin="10" Padding="10">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/component/Images/group.png" Margin="3,0" VerticalAlignment="Center" />
                    <TextBlock FontWeight="Bold" VerticalAlignment="Center">GroupBox Exemplo</TextBlock>
                </StackPanel>
            </GroupBox.Header>
            <StackPanel>
                <TextBlock>Nome:</TextBlock>
                <TextBox />
                <TextBlock>Sobrenome:</TextBlock>
                <TextBox />
                <Button Margin="0,20">Adicionar Usuário</Button>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>

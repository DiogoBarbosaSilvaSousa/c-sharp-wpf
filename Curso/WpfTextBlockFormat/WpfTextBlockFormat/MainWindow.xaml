<Window x:Class="WpfTextBlockFormat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTextBlockFormat"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="480">
    <Grid>
        <TextBlock Margin="10" TextWrapping="Wrap">
			TextBlock with <Bold>bold</Bold>, <Italic>italic</Italic> and <Underline>underlined</Underline> text.<LineBreak />
            This text has a <Hyperlink RequestNavigate="Hyperlink_RequestNavigate" NavigateUri="https://www.google.com">link</Hyperlink> in it. <LineBreak />
            Este <Span FontWeight="Bold">é</Span> um
			<Span Background="Silver" Foreground="Maroon">TextBlock</Span>
			com <Span TextDecorations="Underline">vários</Span> elementos
			<Span FontStyle="Italic">Span</Span>,
			<Span Foreground="Blue">
				usando uma <Bold>variedade</Bold> de <Italic>estilos</Italic>
			</Span>.
        </TextBlock>
    </Grid>
</Window>

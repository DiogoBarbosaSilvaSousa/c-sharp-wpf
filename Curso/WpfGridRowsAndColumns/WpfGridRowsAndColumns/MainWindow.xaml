<Window x:Class="WpfGridRowsAndColumns.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfGridRowsAndColumns"
        mc:Ignorable="d"
        Title="MainWindow"  Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Button Grid.Column="0">Botão 1</Button>
        <Button Grid.Column="1">Botão 2</Button>
        <Button Grid.Column="2">Botão 3</Button>
        <Button Grid.Column="0" Grid.Row="1">Botão 4</Button>
        <Button Grid.Column="1" Grid.Row="1">Botão 5</Button>
        <Button Grid.Column="2" Grid.Row="1">Botão 6</Button>
        <Button Grid.Column="0" Grid.Row="2">Botão 7</Button>
        <Button Grid.Column="1" Grid.Row="2">Botão 8</Button>
        <Button Grid.Column="2" Grid.Row="2">Botão 9</Button>
    </Grid>
</Window>

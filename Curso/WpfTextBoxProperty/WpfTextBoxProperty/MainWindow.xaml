<Window x:Class="WpfTextBoxProperty.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTextBoxProperty"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <StackPanel Margin="10">
        <Label Content="TextBox Simples:" Target="{Binding ElementName=txtUm}" />
        <TextBox Name="txtUm" Text="Hello, world!" />
        <Label Content="TextBox Múltiplas linhas:" Target="{Binding ElementName=txtDois}" />
        <TextBox Name="txtDois" AcceptsReturn="True" TextWrapping="Wrap" Height="80" />
        <Label Content="TextBox com corretor ortográfico:" Target="{Binding ElementName=txtTres}" />
        <TextBox Name="txtTres" AcceptsReturn="True" TextWrapping="Wrap" SpellCheck.IsEnabled="True" Language="pt-BR" Height="60" />
        <Label Content="TextBox com seleções de TextBox:" Target="{Binding ElementName=txtQuatro}" />
        <TextBox Name="txtQuatro" SelectionChanged="txtQuatro_SelectionChanged"/>
        <Label Content="TextBox para exibição:" Target="{Binding ElementName=txtStatus}" />
        <TextBox Name="txtStatus" AcceptsReturn="True" TextWrapping="Wrap" IsReadOnly="True" />
    </StackPanel>

</Window>

<Window x:Class="WpfDatePicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDatePicker"
        mc:Ignorable="d"
        xml:lang="pt-BR"
        Title="DatePickerSample" Height="300" Width="300">
    <StackPanel Margin="20">
        <Label>Nome:</Label>
        <TextBox />
        <Label>Aniversário:</Label>
        <DatePicker SelectedDate="2000-12-31" SelectedDateFormat="Long"></DatePicker>
        <Label>Gênero:</Label>
        <ComboBox>
            <ComboBoxItem>Feminino</ComboBoxItem>
            <ComboBoxItem>Masculino</ComboBoxItem>
        </ComboBox>
        <Button Margin="20">Inscrever-se</Button>
    </StackPanel>
</Window>

<Window x:Class="WpfTextBlock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTextBlock"
        mc:Ignorable="d"
        Title="MainWindow" Height="220" Width="280">
    <StackPanel>
        <TextBlock Margin="10" Foreground="Red">
			Este é um controle TextBlock <LineBreak />
			com várias linhas de texto. <LineBreak />
            Utilizando "LineBreak".
        </TextBlock>
        <TextBlock Margin="10" TextTrimming="CharacterEllipsis" Foreground="Green">
			Este é um controle TextBlock com texto que pode não ser renderizado completamente, o que será indicado com reticências.
        </TextBlock>
        <TextBlock Margin="10" TextWrapping="Wrap" Foreground="Blue">
			Este é um controle TextBlock com texto quebrado automaticamente, usando a propriedade TextWrapping.
        </TextBlock>
    </StackPanel>
</Window>

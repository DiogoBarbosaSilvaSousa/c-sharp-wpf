<Window x:Class="WpfDockPanelTwo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDockPanelTwo"
        mc:Ignorable="d"
        Title="MainWindow" Height="280" Width="280">
    <DockPanel>
        <Button DockPanel.Dock="Top" Height="50">Topo</Button>
        <Button DockPanel.Dock="Bottom" Height="50">Embaixo</Button>
        <Button DockPanel.Dock="Left" Width="60">Esquerda</Button>
        <Button DockPanel.Dock="Right" Width="60">Direita</Button>
        <Button>Centro</Button>
    </DockPanel>
</Window>
